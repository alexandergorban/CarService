        </div>
        <div class="col-sm-12 col-md-12">
            <div class="form-group">
                <input asp-for="OrderMessage" class="form-control form-input" type="text" placeholder="Write your message" />
                <span asp-validation-for="OrderMessage" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <h4>Personal Details</h4>
        </div>
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <input asp-for="FirstName" class="form-control form-input" type="text" placeholder="First Name"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <input asp-for="SecondName" class="form-control form-input" type="text" placeholder="Second Name"/>
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <input asp-for="EMail" class="form-control form-input" type="text" placeholder="E-Mail"/>
                <span asp-validation-for="EMail" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control form-input" type="text" placeholder="Phone Number"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
            <a asp-action="ClearForm" class="btn btn-default">Clear</a>
        </div>
        <div class="col-sm-6 col-md-6">
            <a asp-action="SendOrder" class="btn btn-primary">Send</a>
        </div>

