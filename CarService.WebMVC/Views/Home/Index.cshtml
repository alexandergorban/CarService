@model CarService.WebMVC.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-12 col-carousel">
        <div id="carousel-top-generic" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/original-slide-1.png" alt="Slide">
                    <div class="carousel-caption"></div>
                </div>
                <div class="item">
                    <img src="~/images/original-slide-2.png" alt="Slide">
                    <div class="carousel-caption"></div>
                </div>
                <div class="item">
                    <img src="~/images/original-slide-3.png" alt="Slide">
                    <div class="carousel-caption"></div>
                </div>
            </div>
        </div>
        <div class="text-carousel">
            <h2>Schedule your next appoimtment</h2>
            <p>Scroll down for details</p>
            <a href="#">
                <span class="glyphicon glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>

<div class="row first-row">
    <div class="col-md-12">
        <h2>Please select a convenient time to leave your vehicle with us</h2>
    </div>
</div>

@*@await Html.PartialAsync("~/Pages/OrderFormPartial/Index.cshtml")*@

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div class="row form-order-detail">
        <div class="col-sm-12 col-md-6 date-section">
            <div class="col-md-12">
                <h4>Date & Time</h4>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="DataFirst" class="form-control form-input" type="text" placeholder="Select a date" onfocus="(this.type='date')" />
                    <span asp-validation-for="DataFirst" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="TimeFirst" class="form-control form-input" type="text" placeholder="Select your time" onfocus="(this.type='time')" />
                    <span asp-validation-for="TimeFirst" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="DataSecond" class="form-control form-input" type="text" placeholder="Select a date" onfocus="(this.type='date')" />
                    <span asp-validation-for="DataSecond" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="TimeSecond" class="form-control form-input" type="text" placeholder="Select your time" onfocus="(this.type='time')" />
                    <span asp-validation-for="TimeSecond" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6 store-hours">
                <h4>Store Hours</h4>
                <p class="day">Mon - Wed</p>
                <p>08:00 AM - 05:00 PM</p>
                <p class="day">Thu</p>
                <p>08:00 AM - 04:00 PM</p>
                <p class="day">Fri</p>
                <p>08:00 AM - 01:00 PM</p>
                <p class="day">Sat</p>
                <p>Close</p>
            </div>
            <div class="col-sm-6 col-md-6 your-service">
                <h4>Choose your services</h4>
                <p>Please select the type of service(s) needed</p>
                <div class="col-md-12 checkbox-item">
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Transmission">
                                <input asp-for="Transmission" />
                                @Html.DisplayNameFor(m => m.Transmission)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 checkbox-item">
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="VehicleMaintenance">
                                <input asp-for="VehicleMaintenance" />
                                @Html.DisplayNameFor(m => m.VehicleMaintenance)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 checkbox-item">
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="VehicleRapair">
                                <input asp-for="VehicleRapair" />
                                @Html.DisplayNameFor(m => m.VehicleRapair)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 checkbox-item">
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Other">
                                <input asp-for="Other" />
                                @Html.DisplayNameFor(m => m.Other)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="col-md-12">
                <h4>Your Vehicle</h4>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="YearOfCar" class="form-control form-input" type="number" placeholder="Year of car" />
                    <span asp-validation-for="YearOfCar" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <select class="form-control">
                        <option value="">Select your car</option>
                        <option>Audi</option>
                        <option>Toyota</option>
                        <option>Hundai</option>
                        <option>Reno</option>
                    </select>
                </div>

            </div>
            <div class="col-sm-12 col-md-12">
                <div class="form-group">
                    <input asp-for="OrderMessage" class="form-control form-input" type="text" placeholder="Write your message" />
                    <span asp-validation-for="OrderMessage" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <h4>Personal Details</h4>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control form-input" type="text" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="SecondName" class="form-control form-input" type="text" placeholder="Second Name" />
                    <span asp-validation-for="SecondName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="EMail" class="form-control form-input" type="text" placeholder="E-Mail" />
                    <span asp-validation-for="EMail" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input asp-for="PhoneNumber" class="form-control form-input" type="text" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
                <a asp-action="ClearForm" class="btn btn-default">Clear</a>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 right-align">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</form>

<div class="row bottom-section">
    <div class="col-md-6 email-section">
        <div class="col-md-12">
            <h3>Sign Up for special offers</h3>
            <p>
                Enter your mail and you will get the best<br />
                offers we have directlly to your inbox
            </p>
        </div>
        <div class="col-md-12">
            <form class="form-inline">
                <div class="form-group">
                    <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Enter here your email">
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
    <div class="col-md-6 share-section">
        <div class="col-md-12">
            <h3>Tell to your friends</h3>
            <p>
                Some of your friends may like to visit if you<br />
                recommend us. They'll trust your taste!
            </p>
        </div>
        <div class="col-md-12 share-buttons">
            <!-- Facebook -->
            <a href="http://www.facebook.com/sharer.php?u=http://www.usergroup.od.ua" target="_blank">
                <img src="~/images/FB-btn-bg.png" alt="Facebook" />
            </a>
            <!-- Twitter -->
            <a href="https://twitter.com/share?url=http://www.usergroup.od.ua&amp;text=Simple%20Share%20Buttons&amp;hashtags=simplesharebuttons" target="_blank">
                <img src="~/images/Twitter-btn-bg.png" alt="Twitter" />
            </a>
        </div>
    </div>
</div>

